rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Club data - currently open for testing
    // TODO: Add authentication and restrict access to club members/treasurer
    match /clubs/{clubId}/{document=**} {
      // For now, allow all read/write operations for testing
      // This should be secured before production use
      allow read, write: if true;

      // Future: Restrict to authenticated users
      // allow read: if request.auth != null;
      // allow write: if request.auth != null &&
      //   (request.auth.token.role == 'treasurer' ||
      //    request.auth.token.role == 'admin');
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
