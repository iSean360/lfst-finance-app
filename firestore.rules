rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // TEMPORARY LOCKDOWN: Require authentication for all access
    // This blocks unauthorized access while keeping your app functional
    // You'll need to sign in to access the app
    match /clubs/{clubId}/{document=**} {
      // Require authentication - blocks all anonymous access
      allow read, write: if request.auth != null;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
